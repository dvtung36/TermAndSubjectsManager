<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".TermManagerActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp">

    </View>
    <LinearLayout
        android:gravity="center_vertical"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <EditText
            android:background="@drawable/backgroundmain"
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="#932929"
            android:textColorHint="#F17F7F"
            android:hint="nhập tên học phần..."
            android:layout_weight="7"
            android:layout_height="50dp">
        </EditText>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="20dp">

        </View>
        <ImageView
            android:id="@+id/imv_search"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_height="40dp">
        </ImageView>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="20dp">

        </View>
        <ImageView
            android:id="@+id/imv_show_all"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:src="@drawable/ic_baseline_all_inbox_24"
            android:layout_height="40dp">
        </ImageView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </View>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/listView_Term"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/imv_add_term"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgroundmain"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_action_name" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>




</LinearLayout>